{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "esnext", // add this line
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    // ? Custom ones
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types","./typings"],
    // ? Babel Plugin Module Resolver
    "baseUrl": "./src",
    "paths": {
      "@actions": ["./actions"],
      "@api": ["./api"],
      "@components": ["./components"],
      "@constants": ["./constants"],
      "@languages": ["./languages"],
      "@navigator": ["./navigator"],
      "@reducers": ["./reducers"],
      "@resources": ["./resources"],
      "@screens": ["./screens"],
      "@services": ["./services"],
      "@storage": ["./storage"],
      "@utils": ["./utils"],     
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
